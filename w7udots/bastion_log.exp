#!/usr/bin/expect

log_user 0
source ~/Dropbox/inc-login/alipay/bastion.in
set timeout 60
## reading passwd +++
stty -echo
send_user -- "passphrase: "
expect_user -re "(.*)\n"
set psw $expect_out(1,string)
send_user -- "\n+token: "
expect_user -re "(.*)\n"
set token $expect_out(1,string)
append pswtoken $psw $token
stty echo
# reading passwd ---

set timeout 10
spawn ssh -q -o GSSAPIAuthentication=no -p$port $usr@$bst
expect -re "(.*password*)" {
    send "$pswtoken\n"
}

expect "$*" {
    send "ssh $logbst\r"
}

expect -re "(.*password*)" {
    send "$psw\n"
}

expect "$*" {
    send "\nsudo -u log -s\r"
}

log_user 1
interact
