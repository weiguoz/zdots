{
    "codeLens.enable": true,
    "coc.source.around.enable": true,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.formatOnSave": true,
    "languageserver": {
        "golang": {
            "command": "$GOPATH/bin/gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        },
        // remove golangci-lint temporarily
        // "golangci-lint": {
        //     "command": "golangci-lint-langserver",
        //     "filetypes": [
        //         "go"
        //     ],
        //     "initializationOptions": {
        //         "command": [
        //             "golangci-lint",
        //             "run",
        //             "--enable-all",
        //             "--disable",
        //             "lll",
        //             "--out-format",
        //             "json",
        //             "--issues-exit-code=1"
        //         ]
        //     }
        // },
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_commands.json",
                "compile_flags.txt",
                ".git/"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": []
        },
        "sql": {
            "command": "sql-language-server",
            "args": [
                "up",
                "--method",
                "stdio"
            ],
            "filetypes": [
                "sql",
                "mysql"
            ]
        }
    },
    "suggest.autoTrigger": "always",
    "suggest.noselect": true,
    "suggest.timeout": 5000,
    "suggest.enablePreview": true,
    "suggest.floatEnable": true,
    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "⚠",
    "diagnostic.infoSign": "i",
    "diagnostic.hintSign": "➤",
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": false,
    "explorer.width": 30,
    "explorer.previewAction.onHover": false, // "content",
    "explorer.icon.enableVimDevicons": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.quitOnOpen": true,
    "explorer.file.column.indent.indentLine": true,
    "explorer.file.showHiddenFiles": false,
    "explorer.buffer.showHiddenBuffers": false,
    "explorer.keyMappings.global": {
        "v": "open:vsplit",
        "rn": "rename",
        "de": "delete",
        "af": "addFile",
        "ad": "addDirectory"
    },
    "snippets.ultisnips.pythonPrompt": false
}
